<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:type="TaskPaneApp">

  <Id>c0a5b1d2-2ab5-4b57-9c3a-bd9b8123a001</Id>
  <Version>1.0.0.30</Version>
  <ProviderName>Prime Glass</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Full Value Viewer"/>
  <Description DefaultValue="Excel add-in for viewing full values in cells."/>

  <IconUrl DefaultValue="https://joerockclimber.github.io/ExcelValues/icon-32.png"/>
  <SupportUrl DefaultValue="https://joerockclimber.github.io/ExcelValues/"/>

  <AppDomains>
    <AppDomain>https://joerockclimber.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Workbook"/>
  </Hosts>

  <Permissions>ReadWriteDocument</Permissions>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://joerockclimber.github.io/ExcelValues/taskpane.html"/>
  </DefaultSettings>

  <VersionOverrides
    xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
    xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="Workbook">
        <DesktopFormFactor>
          <FunctionFile resid="resid.Functions.Url"/>

          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="group.FullValueViewer">
                <Label resid="resid.Group.Label"/>
                <Icon>
                  <HighResolutionIconUrl resid="resid.Icon.32"/>
                </Icon>
                <Control xsi:type="Button" id="button.OpenPane">
                  <Label resid="resid.Button.Label"/>
                  <Supertip>
                    <Title resid="resid.Button.Label"/>
                    <Description resid="resid.Button.Desc"/>
                  </Supertip>
                  <Icon>
                    <HighResolutionIconUrl resid="resid.Icon.32"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonTaskPane</TaskpaneId>
                    <SourceLocation resid="resid.Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
        <bt:Image id="resid.Icon.32"
                  DefaultValue="https://joerockclimber.github.io/ExcelValues/icon-32.png"/>
      </bt:Images>

      <bt:Urls xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
        <bt:Url id="resid.Functions.Url"
                DefaultValue="https://joerockclimber.github.io/ExcelValues/functions.html"/>
        <bt:Url id="resid.Taskpane.Url"
                DefaultValue="https://joerockclimber.github.io/ExcelValues/taskpane.html"/>
      </bt:Urls>

      <bt:ShortStrings xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
        <bt:String id="resid.Group.Label" DefaultValue="Full Value Viewer"/>
        <bt:String id="resid.Button.Label" DefaultValue="Open Viewer"/>
      </bt:ShortStrings>

      <bt:LongStrings xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
        <bt:String id="resid.Button.Desc" DefaultValue="Show the full value viewer task pane."/>
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>
</OfficeApp>
